<view class="gaming-content">
    <!--                主场队伍-->
    <view class="gaming-content-item gaming-content--homeTeam">
        <avatar-component nickname="{{ homeTeam.name }}" avatarUrl="{{ homeTeam.avatarUrl }}"></avatar-component>

        <animation-get-score id="home-score-ani" show-score="show-score" initScore="{{ homeTeam.score }}" scoreChange="{{ homeTeam.scoreChange }}"></animation-get-score>
    </view>

    <!--                分割-->
    <view class="gaming-content--separator">
        <view class="gaming-content--separator-line" />

        <!--                    中间的比赛类型logo-->
<!--        <image class="gaming-content&#45;&#45;separator-logo" src="/assets/images/basketBallTeam/basketBall_logo.png"></image>-->

        <!--                    比赛信息-->
        <view class="gaming-info">
            <text class="gaming-info--quarter">{{ quarter }}</text>

            <text class="gaming-info--time">{{ time }}</text>
        </view>
    </view>

    <!--                客场队伍-->
    <view class="gaming-content-item gaming-content--homeTeam">
        <avatar-component nickname="{{ awayTeam.name }}" avatarUrl="{{ awayTeam.avatarUrl }}" showPosition="right"></avatar-component>

        <animation-get-score id="home-score-ani" show-score="show-score" initScore="{{ awayTeam.score }}" scoreChange="{{ awayTeam.scoreChange }}"></animation-get-score>
    </view>
</view>
