<!--avatar-->
<view name="avatar-component" class="avatar">
    <view class="avatar-top">
        <view class="image-container" wx:if="{{ showPosition === 'left' }}">
            <slot name="avatar"></slot>
            <AvatarImage showText="{{initialText}}" src="{{ avatarUrl }}" mode="aspectFit"></AvatarImage>
        </view>
        <!--    <slot name="avatar"></slot>-->

        <view class="avatar-vertical">
            <view class="image-container" wx:if="{{ showPosition === 'top' }}">
                <slot name="avatar"></slot>
                <AvatarImage showText="{{initialText}}" class="avatar-image" src="{{ avatarUrl }}" mode="aspectFit"></AvatarImage>
            </view>

            <text wx:if="{{ showNickname }}">{{ nickname }}</text>

            <view class="image-container" wx:if="{{ showPosition === 'bottom' }}">
                <slot name="avatar"></slot>
                <AvatarImage showText="{{initialText}}" src="{{ avatarUrl }}" mode="aspectFit"></AvatarImage>
            </view>
        </view>
        <!--    <slot name="nickname"></slot>-->

        <view class="image-container" wx:if="{{ showPosition === 'right' }}">
            <slot name="avatar"></slot>
            <AvatarImage showText="{{initialText}}" src="{{ avatarUrl }}" mode="aspectFit"></AvatarImage>
        </view>
    </view>

    <view class="avatar-bottom">
        <slot name="bottom"></slot>
    </view>
</view>
