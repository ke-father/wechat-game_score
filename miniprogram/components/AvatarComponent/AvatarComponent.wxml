<!--avatar-->
<view name="avatar-component" class="avatar">
    <view class="avatar-top">
        <image wx:if="{{ showPosition === 'left' }}" src="{{ avatarUrl }}" mode="aspectFit"></image>
        <!--    <slot name="avatar"></slot>-->

        <view class="avatar-vertical">
            <image class="avatar-image" wx:if="{{ showPosition === 'top' }}" src="{{ avatarUrl }}" mode="aspectFit"></image>

            <text wx:if="{{ showNickname }}">{{ nickname }}</text>

            <image wx:if="{{ showPosition === 'bottom' }}" src="{{ avatarUrl }}" mode="aspectFit"></image>
        </view>
        <!--    <slot name="nickname"></slot>-->

        <image wx:if="{{ showPosition === 'right' }}" src="{{ avatarUrl }}" mode="aspectFit"></image>
    </view>

    <view class="avatar-bottom">
        <slot name="bottom"></slot>
    </view>
</view>
